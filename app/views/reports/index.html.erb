<div class="row justify-content-between">
  <div class="col-md-4">
    <h1>Status Reports</h1>
  </div>
  <div class="col-md-3 align-self-center">
    <%= render "users/bench_status", user: current_user %>
  </div>
</div>

<hr>

<% if current_user.current_report %>
  <div class="container">
    <%= render "reports/report", report: current_user.current_report %>
  </div>
<% else %>
  <h5>You currently do not have a report to submit.</h5>
<% end %>

<hr>

<% if current_user.reports.count > 1 %>
  <div class="container">
    <div class="row">
      <h2>Previous Reports</h2>
    </div>
    <% current_user.reports.each do |report| %>
      <% if !report.period.current %>
        <%= render "reports/report_row", report: report %>
      <% end %>
    <% end %>
  </div>
<% end %>

<br>